{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "noImplicitReturns": true,
    "outDir": "./built/",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
  },
  "include": [
    "./src/**/*"
  ]
}
